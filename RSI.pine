//-------------------------------------
// INDICATOR PARAMETERS

vVersion                        = "V1.1"
vTitle                          = "Relative Strength Index"
vShort                          = "RSI"
vOverlay                        = false
vScale                          = scale.right
vPrecision                      = 0

study( title = vTitle+" ["+vVersion+"]", shorttitle = vShort, overlay = vOverlay, precision = vPrecision, resolution = "" )

//-------------------------------------
// INPUTS

vRsiSource                      = input( defval = close, type = input.source, title = "RSI - Source" )
vRsiLength                      = input( defval = 14, minval = 1, maxval = 256, title = "RSI - Length" )
vRsiSmooth                      = input( defval = 1, minval = 1, maxval = 256, title = "RSI - Smooth" )

//-------------------------------------
// FUNCTIONS

fMaxUpDown( n, s, t ) =>
    r = ( t == 'up' ) ? max( s[ n ] - s[ n+1 ], 0 ) : max( s[ n+1 ] - s[ n ], 0 )
    r

fMa( n, s, l ) =>
    r = float( 0 )
    for i = 0 to ( l-1 )
        r := ( r + s[ i ] )
    a = r / l

fRma( n, s, l ) =>
    r = float( 0 )
    r := ( na( r[ n+1 ]) ? fMa( n, s, l ) : ( ( r[ n+1 ] * ( l-1 ) ) + s[ n ] ) / l )

fRsi( n, l, s ) =>
    r = float( 0 )
    r := ( 100 - ( 100 / ( 1 + ( fRma( n, fMaxUpDown( n, s, 'up' ), l ) / fRma( n, fMaxUpDown( n, s, 'down' ), l ) ) ) ) )

//-------------------------------------
// COLORS

fColorRsi( n, s ) =>
    r = ( s[1] < s[0] ) ? #666666 : #666665
    r

//-------------------------------------
// PLOT

vUpperBand                      = hline( 70, color = #666666, linestyle = hline.style_dashed, linewidth = 1, title = "Upper Band", editable = true )
vLowerBand                      = hline( 30, color = #666666, linestyle = hline.style_dashed, linewidth = 1, title = "Lower Band", editable = true )
//fill( vUpperBand, vLowerBand, color = #666666, transp = 70, title = "Background" )

vRsi                            = fMa( 0, fRsi( 0, vRsiLength, vRsiSource ), vRsiSmooth )
vPlotRsi                        = plot( vRsi, style = plot.style_line, color = fColorRsi( 0, vRsi ), title = "RSI" )

//-------------------------------------