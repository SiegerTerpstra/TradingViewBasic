//-------------------------------------
// INDICATOR PARAMETERS

vVersion                        = "V1.1"
vTitle                          = "Momentum"
vShort                          = "MOM"
vOverlay                        = false
vScale                          = scale.right
vPrecision                      = 0

study( title = vTitle+" ["+vVersion+"]", shorttitle = vShort, overlay = vOverlay, precision = vPrecision, resolution = "" )

//-------------------------------------
// INPUTS

vMomSource                      = input( defval = close, type = input.source, title = "Source" )
vMomLength                      = input( defval = 10, minval = 1, maxval = 256, title = "Length" )
vMomSmooth                      = input( defval = 1, minval = 1, maxval = 256, title = "Smooth" )

//-------------------------------------
// FUNCTIONS

fMa( n, s, l ) =>
    r = float( 0 )
    for i = 0 to ( l-1 )
        r := ( r + s[ i ] )
    a = r / l

fMom( n, s, l ) =>
    r = float( 0 )
    r := ( s[ n ] - s[ n+l ] )

//-------------------------------------
// COLORS

fColorMom( n, s ) =>
    r = ( s >= 0 ) ? ( s[1] < s[0] ) ? #666667 : #666666 : ( s[1] > s[0] ) ? #666665 : #666664
    r

//-------------------------------------
// PLOT

vLineMedian                     = hline( 0, color = #666666, linestyle = hline.style_dashed, linewidth = 1, title = "Median", editable = true )

vMom                            = fMa( 0, fMom( 0, vMomSource, vMomLength ), vMomSmooth )
vPlotMom                        = plot( vMom, style = plot.style_histogram, linewidth = 4, color = fColorMom( 0, vMom ), title = "Momentum" )

//-------------------------------------